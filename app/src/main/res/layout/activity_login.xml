<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/background"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:background="#292929"
        android:clickable="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/input_PINPAD"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/input_1"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_2"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_3"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/input_4"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_5"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_6"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/input_7"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_8"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <Button
                android:id="@+id/input_9"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/input_BLANK"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="423dp" />

            <Button
                android:id="@+id/input_0"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#5CE1E6" />

            <ImageView
                android:id="@+id/input_DEL"
                android:layout_width="83.3333dp"
                android:layout_height="75dp"
                android:clickable="true"
                app:srcCompat="@drawable/imageedit_20_2793318094" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button_LOGIN"
        android:layout_width="124dp"
        android:layout_height="67dp"
        android:layout_marginTop="550dp"
        android:background="#374E4E4E"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/KeepSafe_LOGO"
        android:layout_width="400dp"
        android:layout_height="125dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/keep_safe_logo_final2"
        tools:srcCompat="@drawable/keep_safe_logo_final2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/editText_inputBar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="#2FFFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>